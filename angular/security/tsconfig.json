{
	"compilerOptions": {
		"baseUrl": ".",
		"declaration": true,
		"stripInternal": true,
		"experimentalDecorators": true,
		"strictNullChecks": true,
		"noImplicitAny": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"rootDir": ".",
		"outDir": "dist",
		"sourceMap": true,
		"inlineSources": true,
		"target": "es5",
		"skipLibCheck": true,
		"lib": [
			"es2015",
			"dom"
		],
		"typeRoots": [
			"./node_modules/@types/"
		]
	},
	"exclude": [
		"node_modules"
	]
}