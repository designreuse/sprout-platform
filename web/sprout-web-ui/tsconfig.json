{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noEmitHelpers": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowJs": true,
    "lib": ["es2015", "dom"],
    "paths": {
      "plugins/*": ["/etc/sprout/plugins/*"],
      "*": ["./node_modules/*"]
    }
  },
  "exclude": ["dist", "target", "build"],
  "compileOnSave": false,
  "buildOnSave": false,
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  }
}
